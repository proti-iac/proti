{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./bin",
    "plugins": [
      {
        "transform": "typia/lib/transform",
      },
      {
        "transform": "tst-reflect-transformer",
        "reflection": {
            "metadata": {
                "metadataTypelibPath": "../bin/metadata.typelib.js"
            }
        }
      }
    ]
  },
  "include": [
    "src/**/*"
  ]
}
